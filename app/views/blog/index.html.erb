<div class="my-container mx-auto py-12">
  <h1 class="text-5xl font-extrabold mb-12 text-center tracking-widest text-black">
    Blog
  </h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @posts.each do |post| %>
      <div class="bg-gray-100 border-4 border-black shadow-none hover:shadow-xl hover:translate-x-1 hover:translate-y-1 transition-all duration-300">
        
        <% if post[:image].present? %>
          <img src="<%= post[:image] %>" alt="<%= post[:title] %>" class="w-full h-48 object-cover border-b-4 border-black">
        <% end %>

        <div class="p-6">
          <h2 class="text-3xl font-bold text-black">
            <%= link_to post[:title], blog_post_path(post[:slug]), class: "hover:underline" %>
          </h2>

          <p class="text-lg font-mono text-gray-800 mt-4 leading-relaxed">
            <%= post[:date] || "No date available." %>
          </p>

          <p class="text-md font-mono text-gray-600 mt-2">
            <%= post[:summary] || "No summary available." %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
